.route-panel(
  ng-show="show"
) 
  .right
    button(
      
    ) Edit
    
    button(
      ng-click="strip()"
    ) Strip

    button(
      ng-click="show = false;"
    ) X
    
  hr
  
  .center
    img(
      src="{{zone.image}}"
      width="100%"
    )

  hr
  
  .left
    h3 Route Information
    
    .row
      .col-md-6.left
        span Name
      .col-md-6.right
        span {{route.name}}

    .row
      .col-md-6.left
        span Note
      .col-md-6.right
        span {{route.note}}
        
    .row
      .col-md-6.left
        span Avg. Rating
      .col-md-6.right
        span {{rating}}
    
    .row
      .col-md-6.left
        span Grade
      .col-md-6.right
        span {{grade.name}}
        
    .row
      .col-md-6.left
        span Color
      .col-md-6.right
        .color(
          ng-style="{'background-color': color.value}"
        )
        
    .row
      .col-md-6.left
        span Zone
      .col-md-6.right
        span {{zone.name}}
        
    .row
      .col-md-6.left
        span Setter
      .col-md-6.right
        span {{setter.firstname}} {{setter.lastname}}
        
    .row
      .col-md-6.left
        span Date Set
      .col-md-6.right
        span {{route.createdAt}}
        
  .projecting
    
  .sends
  
  .comments
        
