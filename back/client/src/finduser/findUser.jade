.col-2-fluid
  header
    .logo myApp
    .right.link Articles

  .container-fluid.content
    .row
      .col-md-8.col-md-push-2
        .panel.top
          h2 User Search
          
          input(
            ng-model="search"
          )
          
          .user(
            ng-repeat="user in users | filter : myFilter"
            ui-sref="profile({userId: user.id})"
          )
            .flag.member 
              img(
                ng-src="{{user.image}}"
              )
              .text {{user.name}}

  footer
