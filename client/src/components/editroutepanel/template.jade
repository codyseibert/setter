.route-panel(
  ng-show="show"
) 
  .right

    button(
      ng-click="show = false;"
    ) X
    
  hr
  
  .left
    h3 Set Route
    form(
      ng-submit="submit()"
    )
      .row
        .col-md-6.left
          span Type
        .col-md-6.right
          select(
            ng-model="route.type"
            ng-options="type as type.name for type in types track by type.id"
          )

      .row(
        ng-if="route.type.id === 0"
      )
        .col-md-6.left
          span Grade
        .col-md-6.right
          select(
            ng-model="route.grade"
            ng-options="grade as grade.name for grade in boulderGrades track by grade.id"
          )
          
      .row(
        ng-if="route.type.id !== 0"
      )
        .col-md-6.left
          span Grade
        .col-md-6.right
          select(
            ng-model="route.grade"
            ng-options="grade as grade.name for grade in ropeGrades track by grade.id"
          )
          
      .row
        .col-md-4.left
          span Color
        .col-md-8.right
          .color(
            ng-repeat="color in colors"
            ng-style="{'background-color': color.value}"
            ng-click="route.colorId = color.id"
            ng-class="{'selected': route.colorId === color.id}"
          )
          
      .row
        .col-md-6.left
          span Setter
        .col-md-6.right
          select(
            ng-model="route.setter"
            ng-options="setter as setter.name for setter in setters track by setter.id"
          )
          
      .row
        .col-md-6.left
          span Name
        .col-md-6.right
          input(
            placeholder="My Super Awesome Route!"
            ng-model="route.name"
          )
          
      .row
        .col-md-6.left
          span Note
        .col-md-6.right
          input(
            placeholder="Side Wall Off!"
            ng-model="route.note"
          )
          
      .row
        button(
          type="submit"
        ) Create Route
